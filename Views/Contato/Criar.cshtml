@{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar contato</h1>
</div>

<form>

    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input type="text" class="form-control" placeholder="Nome do contato">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Endereço de e-mail</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="E-mail do contato">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Telefone</label>
        <input type="tel" class="form-control" placeholder="Telefone do contato">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-success" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>